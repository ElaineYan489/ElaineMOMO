<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tv_conversation_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:43pm"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_conversation_details_time"/>
    
    <TextView 
        android:id="@+id/tv_conversation_detail_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="的"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:minWidth="70dp"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg_receive_sms"
        />
    
    <TextView 
        android:id="@+id/tv_conversation_detail_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大金佛寺"
        android:minWidth="70dp"
        android:textSize="16sp"
        android:paddingLeft="5dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:background="@drawable/bg_send_sms"/>

</LinearLayout>
